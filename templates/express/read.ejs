import * as express from "express";
import { HttpError } from './HttpError';
import { cleanBody } from './cleanBody';
import { <%= schema.entitySingularUc %> } from './<%= schema.entitySingularUc %>';
import { Schema } from 'mongoose';

export function read(_id: Schema.Types.ObjectId|string, next) {
  return <%= schema.entitySingularUc %>.findById(_id, function(err, entity) {
    /* istanbul ignore next */ if (err) {
      return next(err);
    }

    if (!entity) {
      return next(new HttpError(404, 'Not found'));
    }

    return next(null, entity);
  });
}

export function readNullable(_id: Schema.Types.ObjectId|string, next) {
  return <%= schema.entitySingularUc %>.findById(_id, function(err, entity) {
    /* istanbul ignore next */ if (err) {
      return next(err);
    }

    if (!entity) {
      entity = null;
    }

    return next(null, entity);
  });
}


