{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Schema for backend model and fontend interface",

  "definitions": {
    "backend_schema": {
      "type": "object",
      "patternProperties": {
        "[a-z0-9_]": {
          "$ref": "#/definitions/backend_schema_t"
        }
      }
    },
    "backend_schema_t": {
      "oneOf": [{
        "$ref": "#/definitions/backend_schema_prim"
      },{
        "$ref": "#/definitions/backend_schema_object"
      },{
        "$ref": "#/definitions/backend_schema_array"
      }]
    },
    "backend_schema_array": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "enum": [
            "Array"
          ]
        },
        "items": {
          "$ref": "#/definitions/backend_schema_t"
        }
      }
    },
    "backend_schema_object": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "enum": [
            "Object"
          ]
        },
        "properties": {
          "$ref": "#/definitions/backend_schema"
        }
      }
    },
    "backend_schema_prim": {
      "type": "object",
      "required": ["label"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "type": {
          "enum": [
            "Date",
            "String",
            "Number",
            "ObjectId",
            "Mixed"
          ]
        },
        "required": {
          "type": "boolean"
        },
        "maxlength": {
          "type": "number"
        },
        "minlength": {
          "type": "number"
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "match": {
          "type": "number"
        },
        "restricted": {
          "oneOf": [{
            "type": "boolean"
          },{
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "read": {
                "type": ["string", "boolean"]
              },
              "create": {
                "type": ["string", "boolean"]
              },
              "update": {
                "type": ["string", "boolean"]
              }
            }
          }]
        },
        "enum": {
          "type": "array"
        },
        "labels": {
          "type": "array"
        },
        "default": {
          "type": ["array", "boolean", "integer", "number", "null", "object", "string" ]
        },
        "items": {
          "type": "object"
        },
        "ref": {
          "type": "string"
        },
        "set_current_user": {
          "type": "boolean"
        },
        "index": {
          "type": "boolean"
        },
        "auto": {
          "type": "boolean"
        }
      }
    }
  },

  "id": "root",
  "type": "object",
  "required": ["singular", "backend", "frontend"],
  "additionalProperties": false,
  "properties": {
    "singular": {
      "id": "singular",
      "type": "string"
    },
    "backend": {
      "id": "backend",
      "type": "object",
      "required": ["schema", "permissions"],
      "additionalProperties": false,
      "properties": {
        "ignore_perm_err": {
          "id": "backend/ignore_perm_err",
          "type": "boolean"
        },
        "options": {
          "type": "object",
          "properties": {
            "collection": {
              "id": "backend/collection",
              "type": "string"
            }
          }
        },
        "permissions": {
          "id": "backend/permissions",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "read": {
              "type": ["string", "boolean"]
            },
            "list": {
              "type": ["string", "boolean"]
            },
            "create": {
              "type": ["string", "boolean"]
            },
            "update": {
              "type": ["string", "boolean"]
            },
            "delete": {
              "type": ["string", "boolean"]
            }
          }
        },
        "schema": {
          "$ref": "root#/definitions/backend_schema"
        }
      }
    },
    "frontend": {
      "id": "frontend",
      "type": "object",
      "required": ["forms", "buttons"],
      "additionalProperties": false,
      "properties": {
        "buttons": {
          "id": "frontend/buttons",
          "type": "object"
        },
        "list": {
          "id": "frontend/list",
          "type": "object",
          "patternProperties": {
            "[a-z0-9_]": {
              "type": "object",
              "properties": {
                "type": {
                  "enum": ["number", "select", "text", "date-range"]
                }
              }
            }
          }
        },
        "forms": {
          "id": "frontend/forms",
          "type": "object",
          "patternProperties": {
            "[a-z0-9_]": {
              "type": "object",
              "properties": {
                "type": {
                  "enum": ["text", "number", "email", "password", "date", "select", "checklist", "static", "textarea", "list"]
                }
              }
            }
          }
        }
      }
    }
  }
}
